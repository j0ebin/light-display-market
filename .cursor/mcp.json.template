{
  "name": "mcp-config",
  "version": "1.0.0",
  "description": "MCP Configuration with Browser Tools and Stripe",
  "tools": {
    "browser": {
      "package": "@agentdeskai/browser-tools-mcp",
      "version": "1.2.0"
    },
    "stripe": {
      "package": "@stripe/mcp",
      "version": "latest",
      "config": {
        "tools": "all",
        "api_key": "YOUR_STRIPE_API_KEY"
      }
    },
    "perplexity-ask": {
      "command": "npx -y server-perplexity-ask",
      "env": {
        "PERPLEXITY_API_KEY": "YOUR_PERPLEXITY_API_KEY"
      }
    }
  }
} 